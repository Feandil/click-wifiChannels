config  wifi-device  radio0
	option type	mac80211 
	option channel	11
	option hwmode	11g
	option phy	phy0

	# REMOVE THIS LINE TO ENABLE WIFI:
	# option disabled 1

config  wifi-iface
	option device	radio0
	option network	wifi
	option mode	adhoc
	option ssid	aziala_next
	option bssid    02:ca:ff:ee:ba:be
	option encryption none
